.devise
  = render "devise/shared/header"
  .productMainSection
    .inner
      %h2.title 商品の情報を入力
      .productForm
        = form_for @item, url: items_path, mehod: :post do |f|
          .formSection
            = f.hidden_field :user_id, value: current_user.id
            .productForm__field.productForm__field--top
              = f.label :出品画像
              %span.formRequired 必須
              %br/
              %p 最大3枚までアップロードできます
              %ul.formUploader
                #list
                = f.fields_for :images do |i|
                  %li.form-area{"data-item-id": 0,style: "display:block"}
                    = i.label :image,{class: "dropzone-box",}
                    = i.file_field :image,class: "upload-image"
                = f.fields_for :images do |i|
                  %li.form-area{"data-item-id": 1,style: "display:none"}
                    = i.label :image,{class: "dropzone-box","data-item_id": 1}
                    = i.file_field :image,class: "upload-image"
                = f.fields_for :images do |i|
                  %li.form-area{"data-item-id": 2,style: "display:none"}
                    = i.label :image,{class: "dropzone-box","data-item_id": 2}
                    = i.file_field :image,class: "upload-image"
          .formSection

            .productForm__field
              = f.label :商品名
              %span.formRequired 必須
              %br/
              = f.text_field :name, required: true, placeholder: "商品名（40字まで）", class: "inputField",maxlength: 40
            .productForm__field
              = f.label :商品の説明
              %span.formRequired 必須
              %br/
              = f.text_area :text, required: true, placeholder: "商品説明（1,000字まで）例）2018年に購入した、革ジャンです。黒みがかった見た目です。傷等はございません。", class: "inputField inputField__area", rows: "7",maxlength:1000
          .formSection
            .contentLeft
              %h3 商品の詳細
            .contentRight
              .productForm__field.productForm__field--category
                = f.label :category_id do
                  カテゴリー
                  %span.formRequired 必須
                  %br/
                  = f.collection_select :category_id, @topcategories,:id,:name,{include_blank: "---"},class: "inputField inputField__select",required: true
                  #category
              .productForm__field
                = f.label :ブランド
                %br/
                = f.text_field :brand, placeholder: "例) ルイ ヴィトン"
              .resultLists
              .productForm__field
                = f.label :商品の状態
                %span.formRequired 必須
                %br/
                = f.select(:shopping_status, [["新品/未使用", :unused], ["未使用に近い", :near_used], ["目立った傷や汚れなし", :no_dirt], ["やや傷や汚れあり", :some_dirt], ["傷や汚れあり", :dirt], ["状態が悪い", :bad_condition]], {prompt: "---"}, {class: "inputField inputField__select", required: true})
          .formSection
            .contentLeft
              %h3
                配送について
                %span
                = link_to "#" do
                  = fa_icon "question-circle"
            .contentRight
              .productForm__field
                = f.label :配送料の負担
                %span.formRequired 必須
                %br/
                = f.select(:send_burden, [["送料込み（出品者負担）", :postage_included], ["着払い（購入者負担）", :cash_on_delivery]], {prompt: "---"}, {class: "inputField inputField__select", required: true})
              .productForm__field
                = f.label :発送元の地域
                %span.formRequired 必須
                %br/
                = f.collection_select :prefecture_id, Prefecture.all,:id, :name,{include_blank: "---"},class: "inputField inputField__select",required: true
              .productForm__field
                = f.label :発送までの日数
                %span.formRequired 必須
                %br/
                = f.select(:delivery_date, [["1-2日で発送", :ship_in_1_2days], ["2-3日で発送", :ship_in_2_3days], ["4-7日で発送", :ship_in_4_7days]], {prompt: "---"}, {class: "inputField inputField__select", required: true})
          .formSection
            .contentLeft
              %h3
                販売価格（300 - 9,999,999円）
                %span
                = link_to "#" do
                  = fa_icon "question-circle"
            .contentRight.contentRight--price
              .productForm__field
                %ul
                  %li
                    = f.label :価格（円）
                    %span.formRequired 必須
                  %li
                    = f.number_field :price, required: true, placeholder: "例）1,000", class: "inputField",onkeypress: "return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57"

              .profitholder
                %ul
                  %li 販売手数料（10%）
                  %li -
                %ul.profitholder--output
                  %li 販売利益
                  %li -
          .formSection
            .confirmation
              %p
                = link_to "禁止されている出品", "#"
                、
                = link_to "行為", "#"
                を必ずご確認ください。
              %p
                またブランド品でシリアルナンバー等がある場合はご記載ください。
                = link_to "偽ブランドの販売", "#"
                は犯罪であり処罰される可能性があります。
              %p
                また、出品をもちまして
                = link_to "加盟店規約", "#"
                に同意したことになります。
            .productForm__actions
              = f.submit "出品する", class: "productBtn"
            = link_to "もどる", :back, class: "returnBtn"
  = render "devise/shared/footer"
